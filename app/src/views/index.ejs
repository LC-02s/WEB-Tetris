        <div class="setting-wrap">
          <h1 class="setting-wrap__title">Settings</h1>
          <div class="setting-wrap__menuBox">
            <h2 class="setting-wrap__menuBoxTitle"><span>Menu</span></h2>
            <div class="setting-wrap__menuBoxFrame">
              <!-- // 1P Key Binding -->
              <ul>
                <li
                  class="selected"
                  data-setting-article="Enter a key to change the key binding"
                >
                  <h3>Move Right</h3>
                  <div class="setting-wrap__menuBoxBtn">
                    <button type="button">Arrow Right</button>
                  </div>
                </li>
                <li
                  data-setting-article="Enter a key to change the key binding"
                >
                  <h3>Move Left</h3>
                  <div class="setting-wrap__menuBoxBtn">
                    <button type="button">Arrow Left</button>
                  </div>
                </li>
                <li
                  data-setting-article="Enter a key to change the key binding"
                >
                  <h3>Rotate Right</h3>
                  <div class="setting-wrap__menuBoxBtn">
                    <button type="button">Arrow Up</button>
                  </div>
                </li>
                <li
                  data-setting-article="Enter a key to change the key binding"
                >
                  <h3>Rotate Left</h3>
                  <div class="setting-wrap__menuBoxBtn">
                    <button type="button">Key Z</button>
                  </div>
                </li>
                <li
                  data-setting-article="Enter a key to change the key binding"
                >
                  <h3>Soft Drop</h3>
                  <div class="setting-wrap__menuBoxBtn">
                    <button type="button">Arrow Down</button>
                  </div>
                </li>
                <li
                  data-setting-article="Enter a key to change the key binding"
                >
                  <h3>Hard Drop</h3>
                  <div class="setting-wrap__menuBoxBtn">
                    <button type="button">Space</button>
                  </div>
                </li>
                <li
                  data-setting-article="Enter a key to change the key binding"
                >
                  <h3>Hold</h3>
                  <div class="setting-wrap__menuBoxBtn">
                    <button type="button">Key C</button>
                  </div>
                </li>
              </ul>
              <!-- // Default Key Binding -->

              <!-- // Sound Option -->
              <ul>
                <li
                  data-setting-article="Press the right and left arrows to change the value of the menu"
