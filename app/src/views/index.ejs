<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WEB-Tetris</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <main>
      <!-- // intro -->
      <section id="intro-container" class="default-container" data-disabled="0">
        <div class="intro-wrap">
          <h1 class="intro-wrap__title">WEB-TETRIS</h1>
          <p id="preload-progress" class="intro-wrap__comment">
            <!-- Press To Start Game -->
            Loading... 00%
          </p>
        </div>
      </section>
      <!-- // intro -->

      <!-- // menu -->
      <section id="menu-container" class="default-container" data-disabled="0">
        <div class="menu-wrap">
          <h1 class="menu-wrap__title">WEB-TETRIS</h1>
          <div class="menu-wrap__menuBox">
            <h2 class="menu-wrap__menuBoxTitle"><span>Menu</span></h2>
            <ul>
              <li class="selected">1P Play (Marathon)</li>
              <li>2P Play</li>
              <li>Versus AI</li>
            </ul>
            <ul>
              <li>Settings</li>
              <li>Language</li>
            </ul>
          </div>
          <p class="menu-wrap__article">
            Jump right into a game of Marathon with the default settings
          </p>
        </div>
      </section>
      <!-- // menu -->

      <!-- // setting -->
      <section
        id="setting-container"
        class="default-container"
        data-disabled="1"
      >
        <div class="setting-wrap">
          <h1 class="setting-wrap__title">Settings</h1>
          <div class="setting-wrap__menuBox">
            <h2 class="setting-wrap__menuBoxTitle"><span>Menu</span></h2>
            <div class="setting-wrap__menuBoxFrame">
              <ul>
                <li></li>
              </ul>
            </div>
          </div>
          <p class="setting-wrap__article">
            Enter a key to change the key binding
          </p>
        </div>
      </section>
      <!-- // setting -->

      <!-- // modal -->
      <section
        id="modal-container"
        class="default-container"
        data-disabled="0"
      ></section>
      <!-- // modal -->

      <!-- // game -->
      <section
        id="game-container"
        class="default-container"
        data-disabled="0"
      ></section>
      <!-- // game -->
    </main>
    <!-- // define script -->
    <script type="module" src="/js/ui-common.js"></script>
    <!-- // define script -->
  </body>
</html>
