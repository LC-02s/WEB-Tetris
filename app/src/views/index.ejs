      <!-- // game -->
      <section
        id="game-container"
        class="default-container"
        data-container-index="3"
        data-disabled="0"
      >
        <!-- // Marathon Mode -->
        <div class="game-wrap">
          <div class="game-wrap__left">
            <div class="game-wrap__box game-wrap__hold">
              <p class="game-wrap__boxTitle">HOLD</p>
              <div></div>
            </div>
            <div class="game-wrap__box game-wrap__overview">
              <p class="game-wrap__boxTitle">OVERVIEW</p>
              <div></div>
            </div>
          </div>
          <div class="game-wrap__center">
            <canvas
              id="marathon-mode"
              class="game-wrap__mainGrid"
              width="360"
              height="720"
            ></canvas>
            <div class="game-wrap__timer">
              <p class="game-wrap__timerText">300ms</p>
              <div class="game-wrap__timerBar"></div>
            </div>
          </div>
          <div class="game-wrap__right">
            <div class="game-wrap__box game-wrap__next">
              <p class="game-wrap__boxTitle">NEXT</p>
              <div class="game-wrap__nextPreview"></div>
              <div class="game-wrap__nextList"></div>
            </div>
            <div class="game-wrap__pauseBtn">
              <button type="button">PAUSE(ESC)</button>
            </div>
          </div>
        </div>
