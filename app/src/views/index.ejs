        </div>
      </section>
      <!-- // intro -->

      <!-- // menu -->
      <section
        id="menu-container"
        class="default-container"
        data-container-index="1"
        data-disabled="0"
      >
        <div class="menu-wrap">
          <h1 class="menu-wrap__title">WEB-TETRIS</h1>
          <div class="menu-wrap__menuBox">
            <h2 class="menu-wrap__menuBoxTitle"><span>Menu</span></h2>
            <ul>
              <li
                class="selected"
                data-menu-article="Jump right into a game of Marathon with the default settings"
              >
                <button id="marathonModeBtn" type="button">
                  1P Play (Marathon)
                </button>
              </li>
              <!-- <li data-menu-article="menu 2">
                <button id="2pModeBtn" type="button">2P Play</button>
              </li> -->
              <li
                data-menu-article="Jump right into a game of Versus AI with the default settings"
              >
                <button id="vsAiModeBtn" type="button">Versus AI</button>
              </li>
            </ul>
            <ul>
              <li
                data-menu-article="Compare your ranking with people worldwide"
              >
                <button id="rankingPageBtn" type="button">Ranking</button>
              </li>
              <li data-menu-article="Change how the game controls and sounds">
                <button id="settingPageBtn" type="button">Settings</button>
              </li>
              <li
                data-menu-article="This menu is currently in the process of being activated and will be available soon"
              >
                <button id="changeLangBtn" type="button">Language</button>
              </li>
            </ul>
          </div>
          <p class="menu-wrap__article">
            Jump right into a game of Marathon with the default settings
          </p>
        </div>
      </section>
